#!/usr/bin/env bash
STOW_FOLDERS=(
    alacritty
    applications
    bin
    fonts
    fuzzel
    helix
    mpv
    profile
    starship
    sway
    swaylock
    swaync
    user-dirs
    waybar
    zsh
)


mkdir -p \
  ~/.config \
  ~/Documents \
  ~/Downloads \
  ~/Music \
  ~/Pictures \
  ~/Videos

# Remove auto generated .profile
rm ~/.profile

for folder in "${STOW_FOLDERS[@]}"
do
  echo "stow $folder"
  stow $folder
done
